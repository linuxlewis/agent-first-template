{
	"name": "agent-first-template",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently \"pnpm --filter @app/server dev\" \"pnpm --filter @app/web dev\"",
		"build": "pnpm -r build",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check . && tsx lints/check-deps.ts",
		"lint:fix": "biome check --fix .",
		"format": "biome format --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"check:docs": "tsx scripts/check-doc-freshness.ts",
		"worktree:boot": "bash scripts/worktree-boot.sh"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"concurrently": "^9.0.0",
		"tsx": "^4.19.0",
		"typescript": "^5.6.0",
		"vitest": "^2.1.0"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@9.15.0"
}
